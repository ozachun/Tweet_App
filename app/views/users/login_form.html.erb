<div class="main users-new">
  <div class="container">
    <div class="form-heading">ログイン</div>
    <div class="form users-form">
      <div class="form-body">
        <!-- パスワードかe-mailが間違っている時にメッセージが表示されるコード↓ -->
        <% if @error_message %>
          <div class="form-error">
            <%= @error_message %>
          </div>
        <% end %>
         <!-- パスワードかe-mailが間違っている時にッセージが表示されるコード↑ -->
        <%= form_tag("/login") do %>
        <p>メールアドレス</p>
        <input name="email" value=" <%=@email%>" ><!-- name属性を指定することで、loginアクションのparamsで認識することができる -->
        <p>パスワード</p>
        <input name="password" type="password" value=" <%=@password%>" ><!-- type属性で、"password"を指定することで、パスワードを入力した時伏字になる。 --><!-- name属性を指定することで、loginアクションのparamsで認識することができる -->
        <input type="submit" value="ログイン">
        <% end %>
      </div>
    </div>
  </div>
</div>
